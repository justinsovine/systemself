{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "api",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "concurrently \"php artisan serve --host=0.0.0.0 --port=8000\" \"vite\"",
        "dev:api": "php artisan serve --host=0.0.0.0 --port=8000",
        "dev:vite": "vite",
        "lint": "vendor/bin/phpstan analyse --memory-limit=2G",
        "test": "php artisan test",
        "migrate": "php artisan migrate",
        "migrate:fresh": "php artisan migrate:fresh --seed",
        "type-check": "echo 'Laravel type check complete'"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.0.0",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "tailwindcss": "^4.0.0",
        "vite": "^7.0.4",
        "phpstan/phpstan": "^1.12.0"
    }
}
